---
import { NAV_ITEMS } from '../../utils/constants';
import { asset } from '../../utils/assets';
---

<header class="header">
	<div class="container">
		<nav class="nav" aria-label="Navegación principal">
			<a href={asset("/")} class="logo" aria-label="Clínica Dental Sada Borrás - Inicio">
				<img 
					src={asset("/icons/logo-dental-1.png")}
					alt="Logo Clínica Dental Sada Borrás" 
					width="200"
					height="35"
				/>
			</a>
			
			<button class="menu-toggle" aria-label="Abrir menú de navegación" aria-expanded="false">
				<span></span>
				<span></span>
				<span></span>
			</button>
			
			<ul class="nav-list">
				{NAV_ITEMS.map(item => (
					<li>
						<a href={item.href}>{item.label}</a>
					</li>
				))}
				<li>
					<a href="#contacto" class="btn-primary">Contacto</a>
				</li>
			</ul>
		</nav>
	</div>
</header>

<style>
	.header {
		position: sticky;
		top: 0;
		background: #FFFFFF;
		box-shadow: 0 2px 16px rgba(0, 0, 0, 0.15);
		z-index: 1000;
		transition: transform 0.3s ease-in-out;
	}
	
	.header.header-hidden {
		transform: translateY(-100%);
	}
	
	.nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 2rem;
		padding: 1rem 0;
	}
	
	.logo {
		display: flex;
		align-items: center;
	}
	
	.logo img {
		display: block;
		width: auto;
		height: 32px;
	}
	
	.menu-toggle {
		display: none;
		flex-direction: column;
		gap: 4px;
		background: none;
		border: none;
		cursor: pointer;
		padding: 8px;
	}
	
	.menu-toggle span {
		display: block;
		width: 25px;
		height: 3px;
		background: var(--color-secondary);
		border-radius: 2px;
		transition: var(--transition);
	}
	
	.nav-list {
		display: flex;
		gap: 2rem;
		list-style: none;
		margin: 0;
		padding: 0;
		flex: 1;
		justify-content: center;
		align-items: center;
	}
	
	.nav-list li {
		margin: 0;
		padding: 0;
	}
	
	.nav-list a {
		color: var(--c-ink);
		font-weight: 500;
		font-family: var(--ff-body);
		font-size: 0.9375rem;
		position: relative;
		padding: 0.5rem 0;
		display: inline-block;
		line-height: 1.5;
	}
	
	.nav-list a::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 0;
		height: 2px;
		background: var(--color-primary);
		transition: width var(--transition);
	}
	
	.nav-list a:hover::after {
		width: 100%;
	}
	
	/* Botón de contacto - estilo invertido (como hover de btn-primary) */
	.nav-list a.btn-primary {
		padding: 0.75rem 1.5rem;
		background: var(--c-primary);
		color: white;
		border: 2px solid var(--c-primary);
	}
	
	.nav-list a.btn-primary::after {
		display: none;
	}
	
	.nav-list a.btn-primary:hover {
		background: white;
		color: var(--c-primary);
		border: 2px solid var(--c-primary);
		transform: translateY(-1px);
	}
	
	/* Responsive */
	@media (max-width: 1024px) {
		.nav-list {
			gap: 1.5rem;
		}
	}
	
	@media (max-width: 767px) {
		.menu-toggle {
			display: flex;
		}
		
		.nav-list {
			position: fixed;
			top: 70px;
			left: 0;
			right: 0;
			background: var(--color-bg);
			flex-direction: column;
			gap: 0;
			padding: 1rem;
			box-shadow: var(--shadow-md);
			transform: translateY(-100%);
			opacity: 0;
			pointer-events: none;
			transition: var(--transition);
		}
		
		.nav-list.active {
			transform: translateY(0);
			opacity: 1;
			pointer-events: auto;
		}
		
		.nav-list li {
			border-bottom: 1px solid var(--color-border);
		}
		
		.nav-list a {
			display: block;
			padding: 1rem;
		}
		
		.nav-list a.btn-primary {
			text-align: center;
			margin: 0.5rem 0;
		}
	}
</style>

<script>
	const menuToggle = document.querySelector('.menu-toggle');
	const navList = document.querySelector('.nav-list');
	const header = document.querySelector('.header');
	
	if (menuToggle && navList) {
		menuToggle.addEventListener('click', () => {
			const isExpanded = menuToggle.getAttribute('aria-expanded') === 'true';
			menuToggle.setAttribute('aria-expanded', String(!isExpanded));
			navList.classList.toggle('active');
		});
		
		// Cerrar menú al hacer clic en un enlace
		const navLinks = navList.querySelectorAll('a');
		navLinks.forEach(link => {
			link.addEventListener('click', () => {
				navList.classList.remove('active');
				menuToggle.setAttribute('aria-expanded', 'false');
			});
		});
	}
	
	// Ocultar/mostrar navbar según dirección del scroll
	let lastScrollY = window.scrollY;
	let ticking = false;
	
	const updateHeader = () => {
		const currentScrollY = window.scrollY;
		
		// Si estamos en la parte superior, siempre mostrar el header
		if (currentScrollY <= 0) {
			header?.classList.remove('header-hidden');
		} 
		// Si hacemos scroll hacia abajo, ocultar
		else if (currentScrollY > lastScrollY && currentScrollY > 100) {
			header?.classList.add('header-hidden');
		} 
		// Si hacemos scroll hacia arriba, mostrar
		else if (currentScrollY < lastScrollY) {
			header?.classList.remove('header-hidden');
		}
		
		lastScrollY = currentScrollY;
		ticking = false;
	};
	
	const onScroll = () => {
		if (!ticking) {
			window.requestAnimationFrame(updateHeader);
			ticking = true;
		}
	};
	
	window.addEventListener('scroll', onScroll, { passive: true });
</script>

