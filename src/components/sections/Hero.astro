---
import { asset } from '../../utils/assets';
// Hero section con contenido optimizado para SEO
---

<section class="hero" id="inicio">
	<div class="hero-bg">
		<video 
			autoplay
			muted
			loop
			playsinline
			preload="auto"
		>
			<source src={asset("/img/5668620-uhd_4096_2160_30fps.mp4")} type="video/mp4" />
		</video>
	</div>
	<div class="hero-overlay"></div>
	<div class="container hero-content">
		<div class="hero-center">
			<div class="hero-logo">
				<img 
					src={asset("/icons/cropped-logo-dental-2-300x300.png")}
					alt="Logo Clínica Dental Sada Borrás"
					class="logo-white"
				/>
			</div>
			<h1>CLÍNICA DENTAL SADA BORRÁS</h1>
			<p class="hero-subtitle">Tu clínica dental de confianza en Pamplona y Tafalla</p>
		</div>
	</div>
</section>

<style>
	.hero {
		position: relative;
		min-height: 650px;
		display: flex;
		align-items: center;
		overflow: hidden;
	}
	
	.hero-bg {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: 0;
	}
	
	.hero-bg video {
		width: 100%;
		height: 100%;
		object-fit: cover;
	}
	
	.hero-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.35);
		z-index: 1;
	}
	
	.hero-content {
		position: relative;
		z-index: 2;
		padding: var(--spacing-xl) 0;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 600px;
		width: 100%;
	}
	
	.hero-center {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		text-align: center;
	}
	
	.hero-logo {
		margin-bottom: 1.5rem;
	}
	
	.logo-white {
		max-width: 90px;
		height: auto;
		filter: brightness(0) invert(1);
	}
	
	.hero h1 {
		font-size: 40px;
		color: white;
		margin: 0 0 0.75rem 0;
		line-height: 1.2;
		font-family: var(--ff-head);
		font-weight: 700;
		letter-spacing: 1px;
		text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
	}
	
	.hero-subtitle {
		font-size: 20px;
		color: white;
		margin: 0;
		font-weight: 400;
		letter-spacing: 0.5px;
		text-shadow: 1px 1px 4px rgba(0, 0, 0, 0.5);
		font-family: var(--ff-body);
	}
	
	
	@media (max-width: 767px) {
		.hero {
			min-height: 550px;
			padding: 0 1rem;
		}
		
		.hero-content {
			min-height: 500px;
			padding: var(--spacing-lg) 0;
		}
		
		.logo-white {
			max-width: 90px;
		}
		
		.hero h1 {
			font-size: 28px;
			letter-spacing: 0.5px;
			margin-bottom: 0.75rem;
		}
		
		.hero-subtitle {
			font-size: 16px;
		}
	}
</style>

