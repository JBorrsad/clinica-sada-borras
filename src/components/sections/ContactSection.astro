---
import { CONTACT_INFO } from '../../utils/constants';
---

<section class="contact section" id="contacto">
	<div class="container">
		<div class="section-header text-center">
			<h2>Contacta con Nosotros</h2>
			<p class="section-subtitle">Visítanos en nuestras clínicas de Pamplona y Tafalla</p>
		</div>
		
		<div class="contact-grid">
			<!-- Clínica Pamplona -->
			<div class="clinic-contact">
				<h3 class="clinic-name">Clínica Pamplona</h3>
				
				<div class="contact-info">
					<div class="info-item">
						<div class="info-icon">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
								<circle cx="12" cy="10" r="3"></circle>
							</svg>
						</div>
						<div class="info-content">
							<p class="info-title">Dirección Pamplona</p>
							<p class="info-text">{CONTACT_INFO.pamplona.address}</p>
							<p class="info-text">C.P. {CONTACT_INFO.pamplona.postalCode} - {CONTACT_INFO.pamplona.city}</p>
						</div>
					</div>
					
					<div class="info-item">
						<div class="info-icon">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
							</svg>
						</div>
						<div class="info-content">
							<p class="info-title">Teléfono:</p>
							<p class="info-text"><a href={`tel:+34${CONTACT_INFO.pamplona.phone.replace(/\s/g, '')}`}>{CONTACT_INFO.pamplona.phone}</a></p>
							<p class="info-text"><a href={`tel:+34${CONTACT_INFO.pamplona.mobile.replace(/\s/g, '')}`}>{CONTACT_INFO.pamplona.mobile}</a></p>
						</div>
					</div>
					
					<div class="info-item">
						<div class="info-icon">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
								<polyline points="22,6 12,13 2,6"></polyline>
							</svg>
						</div>
						<div class="info-content">
							<p class="info-title">Email:</p>
							<p class="info-text"><a href={`mailto:${CONTACT_INFO.pamplona.email}`}>{CONTACT_INFO.pamplona.email}</a></p>
						</div>
					</div>
				</div>
				
				<div class="map-container">
					<iframe 
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2973.7849305684867!2d-1.6547428!3d42.8160167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd50929c8a7f7d87%3A0x9d4c5f8a8e8e8e8e!2sAvenida%20P%C3%ADo%20XII%2C%208%2C%2031008%20Pamplona%2C%20Navarra!5e0!3m2!1ses!2ses!4v1234567890"
						width="100%"
						height="350"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
					></iframe>
				</div>
			</div>
			
			<!-- Separador -->
			<div class="contact-separator"></div>
			
			<!-- Clínica Tafalla -->
			<div class="clinic-contact">
				<h3 class="clinic-name">Clínica Tafalla</h3>
				
				<div class="contact-info">
					<div class="info-item">
						<div class="info-icon">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
								<circle cx="12" cy="10" r="3"></circle>
							</svg>
						</div>
						<div class="info-content">
							<p class="info-title">Dirección Tafalla</p>
							<p class="info-text">{CONTACT_INFO.tafalla.address}</p>
							<p class="info-text">C.P. {CONTACT_INFO.tafalla.postalCode} - {CONTACT_INFO.tafalla.city}</p>
						</div>
					</div>
					
					<div class="info-item">
						<div class="info-icon">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
							</svg>
						</div>
						<div class="info-content">
							<p class="info-title">Teléfono:</p>
							<p class="info-text"><a href={`tel:+34${CONTACT_INFO.tafalla.phone.replace(/\s/g, '')}`}>{CONTACT_INFO.tafalla.phone}</a></p>
						</div>
					</div>
					
					<div class="info-item">
						<div class="info-icon">
							<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
								<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
								<polyline points="22,6 12,13 2,6"></polyline>
							</svg>
						</div>
						<div class="info-content">
							<p class="info-title">Email:</p>
							<p class="info-text"><a href={`mailto:${CONTACT_INFO.tafalla.email}`}>{CONTACT_INFO.tafalla.email}</a></p>
						</div>
					</div>
				</div>
				
				<div class="map-container">
					<iframe 
						src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2982.3749305684867!2d-1.6727428!3d42.5267167!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xd50a8c8a7f7d87%3A0x9d4c5f8a8e8e8e8e!2sDiputaci%C3%B3n%20Foral%2C%202%2C%2031300%20Tafalla%2C%20Navarra!5e0!3m2!1ses!2ses!4v1234567890"
						width="100%"
						height="350"
						style="border:0;"
						allowfullscreen=""
						loading="lazy"
						referrerpolicy="no-referrer-when-downgrade"
					></iframe>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	.contact {
		background: white;
		position: relative;
		z-index: 10;
		border-bottom: 1px solid var(--color-divider);
	}
	
	.contact-grid {
		display: grid;
		grid-template-columns: 1fr auto 1fr;
		gap: 0;
		margin-top: var(--spacing-lg);
		align-items: stretch;
	}
	
	.contact-separator {
		width: 120px;
		align-self: stretch;
	}
	
	.clinic-contact {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		height: 100%;
	}
	
	.clinic-name {
		font-size: var(--font-size-xl);
		color: var(--color-text-light);
		font-weight: 400;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		margin: 0;
		min-height: 2rem;
	}
	
	.contact-info {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
		min-height: 300px;
		flex: 1;
	}
	
	.info-item {
		display: flex;
		gap: 1rem;
		align-items: flex-start;
		min-height: 70px;
	}
	
	.info-icon {
		width: 48px;
		height: 48px;
		background: var(--color-primary-light);
		border-radius: 50%;
		display: flex;
		align-items: center;
		justify-content: center;
		flex-shrink: 0;
	}
	
	.info-icon svg {
		color: var(--color-primary);
	}
	
	.info-content {
		flex: 1;
	}
	
	.info-title {
		font-weight: 700;
		color: var(--color-secondary);
		margin: 0 0 0.5rem 0;
		font-size: var(--font-size-base);
	}
	
	.info-text {
		margin: 0.25rem 0;
		color: var(--color-text);
		font-size: var(--font-size-sm);
		line-height: 1.5;
	}
	
	.info-text a {
		color: var(--color-primary);
		text-decoration: none;
		transition: var(--transition);
	}
	
	.info-text a:hover {
		color: var(--color-primary-dark);
		text-decoration: underline;
	}
	
	.map-container {
		width: 100%;
		border-radius: var(--border-radius-lg);
		overflow: hidden;
		box-shadow: var(--shadow-md);
	}
	
	.map-container iframe {
		display: block;
	}
	
	@media (max-width: 1024px) {
		.contact-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-lg);
		}
		
		.contact-separator {
			display: none;
		}
		
		.clinic-contact {
			gap: 1.5rem;
		}
	}
	
	@media (max-width: 767px) {
		.contact-info {
			padding: 1.5rem;
		}
		
		.map-container iframe {
			height: 300px !important;
		}
	}
</style>

